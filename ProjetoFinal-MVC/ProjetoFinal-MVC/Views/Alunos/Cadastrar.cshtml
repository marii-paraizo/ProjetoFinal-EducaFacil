@model ProjetoFinal_MVC.Models.InputModels.AlunoInputModel
@using ProjetoFinal_MVC.Models.ViewModels
@{
    var turma = ViewBag.Turma as TurmaViewModel;
    var nomeTurma = ViewBag.NomeTurma as string ?? "Turma Desconhecida";

    ViewData["Title"] = $"Cadastrar aluno na turma: {nomeTurma}";
    ViewData["IsFullWidthPage"] = true;
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
}

<div class="header-alunos">
    <div class="titulo-turma">
        <a href="@Url.Action("Index", "Alunos", new { idTurma = Model.IdTurma })" class="btn-voltar-turmas">
            <i class="fas fa-chevron-left"></i>
        </a>
        <h2>Cadastrar aluno na turma: @nomeTurma</h2>
    </div>
</div>

<div class="container-principal">
    <div class="form-cadastro">
        <h2>Cadastrar novo aluno</h2>

        <form asp-controller="Alunos" asp-action="Cadastrar" method="post" id="formCadastrarAluno">

            <input type="hidden" asp-for="IdTurma" />

            <div class="form-group">
                <input asp-for="Nome" type="text" placeholder="Nome do aluno" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group input-com-icone">
                <input asp-for="DataNascimento" type="text" placeholder="Data de nascimento" class="datepicker-data input-dashed" />
                <i class="fas fa-calendar-alt icone-calendario" id="data-nascimento-trigger"></i>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Rm" type="number" placeholder="Rm" />
                <span asp-validation-for="Rm" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="botoes-cadastro">
                <button type="submit" class="btn-confirma">CONFIRMAR</button>
                <a href="@Url.Action("Index", "Alunos", new { idTurma = Model.IdTurma })" class="btn-cancela">CANCELAR</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const dataInput = document.querySelector(".datepicker-data");

            const fpDataNascimento = flatpickr(dataInput, {
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                disableMobile: true,
                maxDate: "today",
                wrap: false,
            });

            document.getElementById('data-nascimento-trigger').addEventListener('click', function (e) {
                e.preventDefault();
                fpDataNascimento.open();
            });
        });
    </script>
}
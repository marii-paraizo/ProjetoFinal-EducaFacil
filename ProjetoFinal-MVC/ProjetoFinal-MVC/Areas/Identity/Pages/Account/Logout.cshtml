@page
@model ProjetoFinal_MVC.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Sair da conta";
}

<style>
    .logout-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding-top: 50px;
    }

    .logout-form-box {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px; 
        background-color: #f1eefb;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="logout-container">
    <div class="logout-form-box">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form method="post">
            <p>Tem certeza que deseja sair da sua conta?</p>
            <button type="submit" class="btn btn-danger btn-lg mt-3">Sair</button>
        </form>
    </div>
</div>